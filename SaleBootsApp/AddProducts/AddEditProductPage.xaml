<Page x:Class="SaleBootsApp.AddProducts.AddEditProductPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SaleBootsApp.AddProducts"
      mc:Ignorable="d" 
      Title="Добавление/Редактирование товара"
      Background="{StaticResource MainBackground}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="71*"/>
            <RowDefinition Height="440*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" Background="{StaticResource SecondaryBackground}">
            <Button Content="Назад" Click="GoBackButton_Click" 
                    Background="{StaticResource AccentColor}" Margin="10,5" Width="80" Height="25"/>
            <TextBlock x:Name="PageTitle" Text="Товар" VerticalAlignment="Center" FontSize="16" FontWeight="Bold" Margin="10,5,0,5"/>
        </StackPanel>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Grid.RowSpan="2">
            <StackPanel Margin="20" MaxWidth="600">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Артикул: *" Margin="0,5,10,5" VerticalAlignment="Center"/>
                    <TextBox Grid.Row="0" Grid.Column="1" x:Name="ArticleTextBox" Text="{Binding Article, UpdateSourceTrigger=PropertyChanged}" 
                             Height="25" Margin="0,5,0,5" />

                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Название: *" Margin="0,5,10,5" VerticalAlignment="Center"/>
                    <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding ProductName, UpdateSourceTrigger=PropertyChanged}" 
                             Height="25" Margin="0,5,0,5" />

                    <TextBlock Grid.Row="2" Grid.Column="0" Text="Категория: *" Margin="0,5,10,5" VerticalAlignment="Center"/>
                    <ComboBox Grid.Row="2" Grid.Column="1" x:Name="CategoryComboBox" DisplayMemberPath="CategoryName" SelectedValuePath="CategoryID"
                              SelectedValue="{Binding CategoryID}" Height="25" Margin="0,5,0,5" />

                    <TextBlock Grid.Row="3" Grid.Column="0" Text="Производитель: *" Margin="0,5,10,5" VerticalAlignment="Center"/>
                    <ComboBox Grid.Row="3" Grid.Column="1" x:Name="ManufacturerComboBox" DisplayMemberPath="ManufacturerName" SelectedValuePath="ManufacturerID"
                              SelectedValue="{Binding ManufacturerID}" Height="25" Margin="0,5,0,5" />

                    <TextBlock Grid.Row="4" Grid.Column="0" Text="Поставщик: *" Margin="0,5,10,5" VerticalAlignment="Center"/>
                    <ComboBox Grid.Row="4" Grid.Column="1" x:Name="SupplierComboBox" DisplayMemberPath="SupplierName" SelectedValuePath="SupplierID"
                              SelectedValue="{Binding SupplierID}" Height="25" Margin="0,5,0,5" />

                    <TextBlock Grid.Row="5" Grid.Column="0" Text="Ед. измерения: *" Margin="0,5,10,5" VerticalAlignment="Center"/>
                    <ComboBox Grid.Row="5" Grid.Column="1" x:Name="UnitsComboBox" DisplayMemberPath="UnitsName" SelectedValuePath="UnitsID"
                              SelectedValue="{Binding UnitsID}" Height="25" Margin="0,5,0,5" />

                    <TextBlock Grid.Row="6" Grid.Column="0" Text="Цена: *" Margin="0,5,10,5" VerticalAlignment="Center"/>
                    <TextBox Grid.Row="6" Grid.Column="1" Text="{Binding Price, UpdateSourceTrigger=PropertyChanged}" 
                             Height="25" Margin="0,5,0,5" />

                    <TextBlock Grid.Row="7" Grid.Column="0" Text="Скидка (%):" Margin="0,5,10,5" VerticalAlignment="Center"/>
                    <TextBox Grid.Row="7" Grid.Column="1" Text="{Binding Discount, UpdateSourceTrigger=PropertyChanged}" 
                             Height="25" Margin="0,5,0,5" />

                    <TextBlock Grid.Row="8" Grid.Column="0" Text="На складе: *" Margin="0,5,10,5" VerticalAlignment="Center"/>
                    <TextBox Grid.Row="8" Grid.Column="1" Text="{Binding QuantityInStock, UpdateSourceTrigger=PropertyChanged}" 
                             Height="25" Margin="0,5,0,5" />

                    <TextBlock Grid.Row="9" Grid.Column="0" Text="Путь к фото:" Margin="0,5,10,5" VerticalAlignment="Center"/>
                    <StackPanel Grid.Row="9" Grid.Column="1" Orientation="Horizontal" Margin="0,5,0,5">
                        <TextBox x:Name="PhotoPathTextBox" Text="{Binding Photo, UpdateSourceTrigger=PropertyChanged}" Width="380" IsReadOnly="True" />
                        <Button Content="Выбрать фото..." Click="SelectPhotoButton_Click" Margin="5,0,0,0"/>
                    </StackPanel>

                    <TextBlock Grid.Row="10" Grid.Column="0" Text="Описание:" Margin="0,5,10,5" VerticalAlignment="Top"/>
                    <TextBox Grid.Row="10" Grid.Column="1" Text="{Binding Description, UpdateSourceTrigger=PropertyChanged}" 
                             MinHeight="80" TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Auto" Margin="0,5,0,5" />

                </Grid>

                <Button Content="Сохранить" Click="SaveButton_Click" HorizontalAlignment="Left" Margin="0,20,0,0" Width="150" Background="{StaticResource AccentColor}"/>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
